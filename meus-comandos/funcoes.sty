% Funções

% Função de um conjunto em outro
\newcommand{\Function}[4]{
	\begin{array}{ccrcl}
		{#1} &:& {#2} & \to & {#3} \\
		&& {#4} & \mapsto & {#1}({#4})
	\end{array}
} % Como usar: \[\Function{FunctionName}{Domain}{CoDomain}{DomainElm}\]

% Restrição de uma função a um subconjunto
\newcommand{\RestrFunc}[2]{\left.{#1}\right|_{{#2}}} % Como usar: $ \RestrFunc{f}{C} $

% Ação de um grupo à direita de um conjunto
\newcommand{\GrpAct}[4]{
	\begin{array}{ccrcl}
		{#1} &:& {#2} & \to & {#3} \\
		&& ({#4}) & \mapsto & \varphi({#4})
	\end{array}
} % Como usar: \[\GrpAct{ActionName}{Grp}{Set}{GrpElm,SetElm}\]
